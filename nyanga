#!/usr/bin/env luajit

package.path  = ';;./lib/?.lua;'..package.path
package.cpath = ';;./lib/?.so;'..package.cpath

do
   local paths = {
      ".",
      "./lib",
      "./src",
      os.getenv('HOME').."/.nyanga",
      "/usr/local/lib/nyanga",
      "/usr/lib/nyanga",
   }
   NYANGA_PATH = table.concat(paths, ';')..';'
end

local runtime = require('runtime')
runtime.runfile(unpack(arg))

